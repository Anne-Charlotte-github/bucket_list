<!-- His/her avatar -->
<div class="flex justify-center">
  <%# <div class="flex justify-center">
    <%= image_tag 'dream.jpg', class:"h-5 w-5 rounded-full border border-white p-1" %>
  <%# </div> %>
  <h1> <%= @user.nickname.capitalize %> </h1>
</div>

<!-- His/her dreams list -->
<div class='grid-structure'>
  <% @dreams.each do |dream| %>
  <% @dream = dream %>
    <%= render 'shared/dream_list', local: @dream %>
  <% end %>
</div>

<!-- Dreams he/she joinded -->
<% if @friends_dreams == [] %>
  <h2><%= @user.nickname.capitalize %> did not join other dreams yet.</h2>
<% else %>
<h2 class="mt-4"><%= @user.nickname.capitalize %> is also member of :</h2>
<div class='grid-structure'>
  <% @friends_dreams.each do |dream|%>
    <% @dream = dream %>
    <%= render 'shared/dream_list', local: @dream %>
  <% end %>
</div>
<% end %>
